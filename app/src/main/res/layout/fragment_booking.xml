<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingHorizontal="@dimen/_20sdp"
    android:paddingTop="@dimen/_32sdp"
    android:background="@color/color_background"
    tools:context=".ui.fragments.booking.BookingFragment">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icon_back" />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bold_dm_sans"
        android:text="Booking"
        android:textSize="@dimen/_15ssp"
        android:layout_marginStart="@dimen/_20sdp"
        app:layout_constraintBottom_toBottomOf="@+id/btnBack"
        app:layout_constraintStart_toEndOf="@+id/btnBack"
        app:layout_constraintTop_toTopOf="@+id/btnBack" />

    <androidx.appcompat.widget.AppCompatAutoCompleteTextView
        android:id="@+id/spinnerSelectCar"
        android:layout_width="0dp"
        android:layout_height="@dimen/_42sdp"
        android:background="@drawable/bg_edit_text"
        android:clickable="true"
        android:layout_marginTop="@dimen/_30sdp"
        android:drawableEnd="@drawable/icon_drop_down"
        android:drawablePadding="@dimen/_10sdp"
        android:dropDownVerticalOffset="3dp"
        android:focusable="false"
        android:fontFamily="@font/medium_dm_sans"
        android:hint="Select your car"
        android:inputType="none"
        android:paddingHorizontal="15dp"
        android:paddingVertical="@dimen/_6sdp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnBack" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/etTime"
        android:layout_width="0dp"
        android:layout_height="@dimen/_42sdp"
        android:background="@drawable/bg_edit_text"
        android:layout_marginTop="@dimen/_15sdp"
        android:drawablePadding="@dimen/_10sdp"
        android:dropDownVerticalOffset="3dp"
        android:fontFamily="@font/medium_dm_sans"
        android:hint="Enter time /hr"
        android:inputType="number"
        android:maxLength="2"
        android:paddingHorizontal="15dp"
        android:paddingVertical="@dimen/_6sdp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinnerSelectCar" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/appCompatTextView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_2sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:fontFamily="@font/medium_dm_sans"
        android:text="Pay on spot"
        android:textSize="@dimen/_15ssp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etTime" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnBook"
        android:layout_width="0dp"
        android:layout_height="@dimen/_38sdp"
        android:background="@drawable/bg_btn"
        android:backgroundTint="@color/color_primary"
        android:fontFamily="@font/bold_dm_sans"
        android:text="Book"
        android:layout_marginTop="@dimen/_20sdp"
        android:textColor="@color/white"
        android:textSize="19sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appCompatTextView9" />
</androidx.constraintlayout.widget.ConstraintLayout>